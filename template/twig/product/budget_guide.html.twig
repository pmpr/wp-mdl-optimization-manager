<div class="h5">{{ title|raw }}</div>
<p class="font-weight-bold">{{ description|raw }}</p>
<ol class="m-0">
    {% for guid in guids %}
        <li{% if not loop.last %} class="pb-4"{% endif %}>
            {% if loop.first %}
                <div class="d-flex justify-content-between flex-column flex-md-row">
                    {{ guid|raw }}
                    <a href="#" class="btn btn-info px-5">
                        {{ get_icon(wordpress_icon, {
                            class: 'icon-white'
                        }, 1)|raw }}
                        <span class="pl-2">{{ install_plugin_text|raw }}</span>
                    </a>
                </div>
            {% else %}
                {{ guid|raw }}
            {% endif %}
        </li>
    {% endfor %}
</ol>
